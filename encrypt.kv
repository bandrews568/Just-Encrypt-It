#: import TextInput kivy.uix.textinput.TextInput
#: import Clipboard kivy.core.clipboard.Clipboard

EncryptRoot:

<EncryptRoot>:
	EncryptText

<EncryptText>:
	orientation: 'vertical'
	BoxLayout:
		height: '40dp'
		size_hint_y: None
		padding: 60, 0 
		Label:
			text: 'Select Key:'
			halign: 'right'
			#text_size: self.size
		Spinner:
			id: key
			text: 'None'
			values: [str(value) for value in range(1, 11)]
	BoxLayout:
		orientation: 'horizontal'
		TabbedPanel:
			do_default_tab: False
			TabbedPanelItem:
				text: 'Encrypt'
				BoxLayout:
					orientation: 'vertical'
					BoxLayout:
						padding: 7, 7
						TextInput:
							id: decrypt
							text: ""
							hint_text: "Enter text to be encrypted"
							on_text: encrypt.text = root.encryptstring(self.text, key.text)
					BoxLayout:
						orientation: 'horizontal'
						height: '50dp'
						size_hint_y: None
						padding: 2, 2
						spacing: 10
						Button:
							text: "Copy"
							on_press: Clipboard.copy(encrypt.text)
						Button:
							text: "Paste"
							on_press: decrypt.text = Clipboard.paste()
						Button:
							text: "Clear"
							on_press: decrypt.text = ""; encrypt.text = ""
						Button:
							text: "Share"
					BoxLayout:
						height: '130dp'
						size_hint_y: None 
						padding: 7, 7
						TextInput:
							id: encrypt
							text: ""
							hint_text: "Encrypted text"
							read_only: True

			TabbedPanelItem:
				text: 'Decrypt'
				BoxLayout:
					orientation: 'vertical'
					BoxLayout:
						padding: 7, 7
						TextInput:
							id: decrypt_main
							text: ""
							hint_text: "Enter text to be decrypted"
							on_text: decrypt_text.text = root.decryptstring(self.text, key.text)
					BoxLayout:
						orientation: 'horizontal'
						height: '50dp'
						size_hint_y: None
						padding: 2, 2
						spacing: 10
						Button:
							text: "Copy"
							on_press: Clipboard.copy(decrypt_text.text)
						Button:
							text: "Paste"
							on_press: decrypt_main.text = Clipboard.paste()
						Button:
							text: "Clear"
							on_press: decrypt_main.text = ""; decrypt_text.text = ""
						Button:
							text: "Share"
							on_press: app.root.share()
					BoxLayout:
						height: '130dp'
						size_hint_y: None 
						padding: 7, 7
						TextInput:
							id: decrypt_text
							text: ""
							hint_text: "Decrypted text"
							read_only: True


			
