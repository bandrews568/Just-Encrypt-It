EncryptRoot:

<EncryptRoot>:
	EncryptText

<EncryptText>:
	orientation: 'vertical'
	decrypted_text: decrypt
	encrypted_text: encrypt
	encrypt_radio: encrypt_radio
	decrypt_radio: decrypt_radio
	BoxLayout:
		orientation: 'horizontal'
		CheckBox:
			id: encrypt_radio
			active: True
			group: 'select'
		Label:
			text: 'Encrypt'
		CheckBox:
			id: decrypt_radio
			group: 'select'
		Label:
			text: 'Decrypt'
	BoxLayout:
		height: '60dp'
		size_hint_y: None
		padding: 70, 0, 70, 0
		pos_hint: {'center': 0.5, 'center': 0.5}
		Label:
			text: 'Select Key:'
		Spinner:
			id: key
			text: 'None'
			values: [str(value) for value in range(1, 11)]
	BoxLayout:
		orientation: 'vertical'
		Button:
			text: 'Paste'
		TextInput:
			id: decrypt
			text: ""
			hint_text: "Enter text"
			on_text: encrypt.text = root.encryptstring(self.text, key.text)
			focus: True
		BoxLayout:
			orientation: 'horizontal'	
			Button:
				text: 'Copy'
			Button:
				text: 'Cut'
		TextInput:
			id: encrypt
			text: ""
			hint_text: "Encrypted text"
			readonly: True
